<% if type == :edit %>
  <% action_url = cat_url(cat) %>
  <% button_text = 'Edit cat' %>
  <% header = 'Edit your cat!' %>
<% else%>
  <% action_url = cats_url %>
  <% button_text = 'Create cat' %>
  <% header = 'Create your cat!' %>
<% end %>

<h1><%= header %></h1>

<form action="<%= action_url %>" method = "post">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label for="name">Name:</label>
  <input type="text" name="cat[name]" id="name" value="<%= cat.name ? cat.name : "" %>">

  <br>

  <label for="sex">Sex:</label>
  <input type="radio" name="cat[sex]" id="sex" value="M" <%= "checked" if cat.sex == "M" %> >Male
  <input type="radio" name="cat[sex]" id="sex" value="F" <%= "checked" if cat.sex == "F" %> >Female

  <br>

  <label for="color">Color:</label>
  <select name="cat[color]" id="color">
    <option disabled <%= "selected" if !cat.color %>>-- Please Select --</option>
    <option value="black" <%= "selected" if cat.color == "black" %> >Black </option>
    <option value="orange" <%= "selected" if cat.color == "orange" %> >Orange</option>
    <option value="pink" <%= "selected" if cat.color == "pink" %> >Pink</option>
  </select>

  <br>

  <label for="birth_date">Birthday</label>
  <input type="date" name="cat[birth_date]" id="birth_date" value="<%= cat.birth_date ? cat.birth_date : "" %>">

  <br>

  <label for="description">Description</label>
  <br>
  <textarea name="cat[description]" id="description" cols="30" rows="10"><%= cat.description ? cat.description : "" %></textarea>

  <br>
  <input type="submit" value="<%= button_text %>">

</form>